<div id="page">  
  <header id="main-header" class="{{ omni_header }}">
    <div id="header">
      <div class="inner wrapper clearfix">
        <div id="site-info">        
          {% if logo %}
            <div id="logo">
              <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
                <img src="{{ logo }}" alt="{{ 'Home'|t }}" />
              </a>
            </div>
          {% else %}
            <div id="site-name">
              <h1><a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a></h1>
            </div>
          {% endif %}
          {% if site_slogan %}
            <div id="site-slogan">
              {{ site_slogan }}
            </div>
          {% endif %}
        </div>        
      </div>
    </div>    
  </header> 

  <div id="main">
    <div class="inner wrapper clearfix">             
      <div id="main-middle" class="{{ omni_layout }}">
        <div class="inner container clearfix">
          <div id="primary-secondary" class="clearfix">
            <div id="primary">         
              <div id="content" class="clearfix">
                {{ page.content }}
              </div>                        
            </div>                        
            {% if page.sidebar_secondary %}
              <div id="secondary" class="sidebar">
                {{ page.sidebar_secondary }}
              </div>
            {% endif %}
          </div>
          {% if page.sidebar_tertiary %}
            <div id="tertiary" class="sidebar">
              {{ page.sidebar_tertiary }}
            </div>
          {% endif %}
        </div>
      </div>      
    </div>
  </div>   
</div>