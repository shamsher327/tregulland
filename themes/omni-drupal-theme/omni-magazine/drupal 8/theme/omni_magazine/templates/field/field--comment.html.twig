<section id="comment" {{ attributes }}>
  {% if comments %}  
    <div id="comment-post" class="clearfix">
      {% if label_hidden == false %}
        {{ title_prefix }}
        <header>
          <h3 class="title">{{ label }}</h3>
        </header>
        {{ title_suffix }}
      {% endif %}
      <div class="comments">
        {{ comments }}
      </div>
    </div>
  {% endif %}  

  {% if comment_form %}
    <div id="comment-box" class="clearfix">
      <header>
        <h3 class="title">{{ 'Add new comment'|t }}</h3>
      </header>
      {{ comment_form }}
    </div>
  {% endif %}
</section>
