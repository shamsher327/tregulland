{% set i = 1 %}

{% if multiple %} 
  {% for item in items %}
    {% if i == 1 %}
      <li class="active">{{ item.content }}</li>
    {% else %}
      <li>{{ item.content }}</li>
    {% endif %} 
    {% set i = i + 1 %}
  {% endfor %}
{% else %}  
  <li{{ attributes }}>{{ item.content }}</li>  
{% endif %}