 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
<ul{{ attributes.addClass('load-more no-bullet text-center') }}>
	<li class="pager__item">
	  <a class="button xlarge rounded" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">{{ options.button_text }}</a>
	</li>
</ul>
{% endif %}