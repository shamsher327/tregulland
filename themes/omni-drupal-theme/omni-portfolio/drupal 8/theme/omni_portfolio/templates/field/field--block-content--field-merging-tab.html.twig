<div class="tabs-content" data-tabs-content="tabs-merging" data-equalizer data-equalize-on="medium">
  {% for item in items %}  
    <div class="tabs-panel{% if loop.index == 1 %} is-active{% endif %}" id="panel-{{loop.index}}"> 
      {{ item.content }}
    </div>
  {% endfor %}
</div>
<div class="tabs-nav text-center">
  <ul class="tabs" id="tabs-merging" data-tabs>
    {% for item in items %}
      {% set block = item.content['#block_content'] %}
      {% set title = block.info.value %}
      <li class="tabs-title{% if loop.index==1 %} is-active{% endif %}">
        <a href="#panel-{{ loop.index }}" {% if loop.index==1 %}aria-selected="true"{% endif %}>{{ title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>

