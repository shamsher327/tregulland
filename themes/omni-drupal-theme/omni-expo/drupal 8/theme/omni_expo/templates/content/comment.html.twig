<div{{ attributes.addClass('comment js-comment') }}>  
  <div class="meta media-object">
    <div class="media-object-section">
    {{ user_picture }}
    </div>
    <div class="media-object-section">
      {% if content.links %}
        {{ content.links }}
      {% endif %}
      <span class="author">{{ author }}</span></br><span class="date">{{ created }}</span>
    </div>
  </div>
  <div class="content">
    <div class="arrow"></div>  
    {% if title %}
      {{ title_prefix }}
      <h4 class="title">{{ title }}</h3>
      {{ title_suffix }}
    {% endif %}
    {{ content|without('links') }}
  </div>
</div>
