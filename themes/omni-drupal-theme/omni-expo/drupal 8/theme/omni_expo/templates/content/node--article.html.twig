{% if not page %}
  <article{{ attributes.addClass('node article teaser clearfix') }}>
    <header>
      <div class="meta">   
        <span class="date">{{ node.createdtime|date("F j, Y") }}</span>
      </div>
      {{ title_prefix }}
        <h2 class="title"><a href="{{ url }}" rel="bookmark">{{ label }}</a></h2>
      {{ title_suffix }} 
    </header>
    <div class="content">
      {{ content|without('comment', 'links', 'field_tags', 'field_image', 'addtoany') }}
    </div>   
    <a href="{{ url }}" class="button">{{ 'READ MORE'|t }}</a>    
  </article>
{% else %}
  <article{{ attributes.addClass('node article full clearfix') }}>
    <header class="text-center">
      <div class="row">
        <div class="small-centered large-8 column">
          {% if content.field_tags|render %}
            <div class="meta term">       
              {{ content.field_tags }}                              
            </div>
          {% endif %} 
          <h1 class="title">{{ label }}</h1>
          {% if display_submitted %}
            <div class="meta submit">
              {{ author_picture }}
              <div class="wrapper">
                <span class="author">{{ 'Posted'|t }} <span class="lowercase">{{ 'by'|t }}</span> {{ author_name }}</span> <span class="lowercase">{{ 'on'|t }}</span> <span class="date">{{ node.createdtime|date("l, m/d/Y") }}</span>
              </div>    
            </div>
          {% endif %}
        </div>
      </div>
    </header>
    <div class="content row">
      <div class="small-centered large-8 column">
        <div class="inner">
          <div id="content-main">    
            {% if content.field_image|render %}
              <div class="image-default">
                {{ content.field_image }}
              </div>
            {% endif %} 
            {{ content|without('comment', 'links', 'field_tags', 'field_image', 'addtoany') }}
            {% if content.links %}
              <div class="links">
                <div class="title"><h3>{{ 'links'|t }}</h3></div>                        
                {{ content.links }}       
              </div>
            {% endif %}
          </div> 
          {{ content.comment }}
        </div>
      </div>
    </div>
  </article>
{% endif %}