{% for item in items %}  
{% set image %}{{ item.content.field_background_image|raw }}{% endset %}
  <div>
    <div class="slide" style="{{ background_image(image) }}"> 
      <div class="filter {{ item.content.field_image_filter }}"></div>
      <div class="inner">
        <div class="row">
          <h4 class="title">{{ item.content.field_title }}</h4>
          <div class="content">                   
            {{ item.content.body }}
          </div>
          {{ item.content.field_button }}
        </div>
      </div>    
    </div>
  </div>
{% endfor %}